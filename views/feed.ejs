<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <% if (locals.selectedTag) { %>
        <div class="col-12 text-center mb-4">
          <h3>Showing posts tagged with: <%= selectedTag %></h3>
          <a href="/feed" class="btn btn-secondary">Clear Filter</a>
        </div>
      <% } %>
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
            <% if (posts[i].tags && posts[i].tags.length > 0) { %>
              <div class="mt-2">
                <% posts[i].tags.forEach(function(tag) { %>
                  <a href="/feed?tag=<%= tag %>" class="badge bg-secondary text-decoration-none"><%= tag %></a>
                <% }); %>
              </div>
            <% } %>
          </li>
        <% } %>
      </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>